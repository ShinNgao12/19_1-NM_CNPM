<div class="row justify-content-center mt-20">
    <div class="d-flex justify-content-center">
      <div class="card" style="width:40rem;padding:10px">
        {{#if isEmpty}}
            <h3 class="mb-20" style="font-size: 18px; color: red">Bạn hãy điền đầy đủ thông tin trước khi cập nhật!</h3>
        {{/if}}
        
        <ul class="list-group list-group-flush">
          <form action="" method="post">
            <li class="list-group-item">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroup-sizing-default">Họ và tên</span>
                    </div>
                    <input name="HoTen" type="text" value="{{user.HoTen}}" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" />
                </div>

                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroup-sizing-default">Ngày sinh</span>
                    </div>
                    <input name="NgaySinh" type="date" value="{{user.NgaySinh}}" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
                
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <label class="input-group-text" for="inputGroupSelect01">Giới tính</label>
                    </div>
                    <select class="custom-select" name="GioiTinh" value="{{user.GioiTinh}}" id="inputGroupSelect01">
                        <option value="NAM">Nam</option>
                        <option value="NU">Nữ</option>
                    </select>
                </div>

                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroup-sizing-default">Số điện thoại</span>
                    </div>
                    <input name="SoDienThoai" type="text" value="{{user.SoDienThoai}}" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" />
                </div>

                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroup-sizing-default">Email</span>
                    </div>
                    <input name="Email" type="email" value="{{user.Email}}" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" />
                </div>

                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroup-sizing-default">Địa chỉ</span>
                    </div>
                    <input name="DiaChi" type="text" value="{{user.DiaChi}}" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" />
                </div>

                <div class="d-flex justify-content-center align-items-end text-center">
                    <button type="submit"
                        style="background-color:#44c767;
                            border-radius:28px;
                            border:1px solid #18ab29;
                            display:inline-block;
                            cursor:pointer;color:#ffffff;font-family:Arial;font-size:17px;padding-left:20px;padding-right:20px;padding-top:10px;padding-bottom:10px;text-decoration:none;;">Cập nhật
                    </button>
              </div>
            </li>
          </form>

        </ul>
      </div>
    </div>
  </div>